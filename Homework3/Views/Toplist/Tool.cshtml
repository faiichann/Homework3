@model IEnumerable<Homework3.Models.Tools>

@{
    ViewData["Title"] = "Tool";
}
<div class="container">
    <div class="row justify-content-md-center">
        <div><h1 class="text-center display-4">@ViewBag.title2</h1><br /><br></div>
        <table class="table table-hover table-dark text-center" style="width: 1000px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19) ">
            <thead>
                <tr class="bg-danger">
                    <th scope="col">Rank</th>
                    <th scope="col">Tools Develop</th>
                    <th scope="col">Rating</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewData["toollist"] as IEnumerable<Homework3.Models.Tools>)
                {
                    <tr>
                        <th scope="row">@item.ToolId</th>
                        <td>@item.ToolName</td>
                        <td>@item.ToolRate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row justify-content-md-center">
        <a class="btn btn-primary btn-lg" asp-controller="Toplist" asp-action="Index" role="button">Home</a>
    </div>
</div>